@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p @onmouseover="IncrementCount">Mouse Over</p>

<!-- this will output test string onto page -->
<p>@test</p>

<!-- to output twitter handle (@@ to output one at symbol) -->
<p>@@IAmTimCorey</p>

<!-- this will output "i + j" not the actual sum-->
<!-- need parathesis to do the math -->
<p>@(i + j)</p>

<br />
<!-- use {} to do multiple lines of code -->
<p>@{
        var k = i * j;
        var g = i - j;
    }</p>
    <br />

<!-- to do HTML code through C# code -->
@{ <h1>This is a big test</h1> }
@((MarkupString)"<h1>This is a big test</h1>")




<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private string test = "This is a test";

    private int i = 5;
    private int j = 6;

    private void IncrementCount()
    {
        currentCount++;
    }
}
